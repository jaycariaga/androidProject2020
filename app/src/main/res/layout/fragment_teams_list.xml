<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teams"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#333333"
        android:textColor="#FFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#3d5278">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teams_list_recyclerview"
        android:scrollbars="vertical"
        android:background="#455679"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        </ScrollView>
    <!--trying to design teams and join team button layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#c9c9c9"
        android:orientation="vertical">

        <Button
            android:id="@+id/joinSelTeam"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginBottom="50dp"
            android:background="#0044FF"
            android:text="Join Team"
            android:textColor="@android:color/white"
            ></Button>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>